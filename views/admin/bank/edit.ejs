<%- include ../../partials/header.ejs %>
    <%- include ../../partials/navbar.ejs %>
        <%- include ../../partials/sidebar.ejs %>

            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1>Bank</h1>
                            </div>
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                                    <li class="breadcrumb-item"><a href="/bank">Bank</a></li>
                                    <li class="breadcrumb-item active">Ubah</li>
                                </ol>
                            </div>
                        </div>
                    </div><!-- /.container-fluid -->
                </section>

                <!-- Main content -->
                <section class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <!-- general form elements -->
                                        <div class="card card-primary">
                                            <div class="card-header">
                                                <h3 class="card-title">Form Ubah Bank "<%= bank.name  %> "</h3>
                                            </div>
                                            <!-- form start -->
                                            <form action="/bank/edit/<%= bank._id %>?_method=PUT" method="post">
                                                <div class="card-body">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label for="name">Nama Pemilik</label>
                                                                <input type="text" name="name" class="form-control" id="name" value="<%= bank.name %>" placeholder="Masukan nama pemilik">
                                                            </div>
                                                            <div class="form-group">    
                                                                <label for="bankName">Nama Bank</label>
                                                                <input type="text" name="bankName" class="form-control" id="bankName" value="<%= bank.bankName%>" placeholder="Masukan nama bank">
                                                            </div>
                                                            <div class="form-group">    
                                                                <label for="noRekening">No Rekening Bank</label>
                                                                <input type="number" name="noRekening" class="form-control" id="noRekening" value="<%= bank.noRekening %>" placeholder="Masukan no rekening bank">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.card-body -->

                                <div class="card-footer">
                                    <button type="submit" class="btn btn-primary">Simpan</button>
                                </div>
                                </form>
                            </div>
                            <!-- /.card -->
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
            </div>
            <!-- /.col -->
            </div>
            <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
            </section>
            <!-- /.content -->
            </div>

            <%- include ../../partials/footer.ejs %>
                <%- include ../../partials/js.ejs %>